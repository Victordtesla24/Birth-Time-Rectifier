{
  "name": "birth-time-rectifier",
  "version": "1.0.0",
  "description": "A tool for rectifying birth times using astrological events",
  "main": "index.js",
  "scripts": {
    "test": "jest tests/",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "build": "webpack --mode production",
    "dev": "webpack serve --mode development",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Victordtesla24/Birth-Time-Rectifier.git"
  },
  "keywords": [
    "astrology",
    "birth-time",
    "rectification"
  ],
  "author": "Victor Tesla",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Victordtesla24/Birth-Time-Rectifier/issues"
  },
  "homepage": "https://github.com/Victordtesla24/Birth-Time-Rectifier#readme",
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.1",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "p5": "^1.9.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "<rootDir>/tests/mocks/styleMock.js",
      "\\.(gif|ttf|eot|svg)$": "<rootDir>/tests/mocks/fileMock.js"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
